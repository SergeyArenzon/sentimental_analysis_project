<!-- OUTPUTS -->
<!-- ------- -->

<div id="circle" class="resultDiv">
    <div id="twitterDiv"> 
        <!-- twitter -->
        <h5>TWITTER</h5>

        <div style="display:inline-block; width: 100%; max-height: 188px;">
            <div style="display:inline-block; float: left; width: 300px; ">
                <h5 id="positive"></h5>
                <div class="hrDiv">
                    <hr class="line"></hr>
                </div>
                <h5 id="negative"></h5>
                <div class="hrDiv">
                    <hr class="line"></hr>
                </div>
                <h5 id="neutral"></h5>
                <div class="hrDiv">
                    <hr class="line"></hr>
                </div>
                <h5 id="polarity"></h5>
            </div>
            
            <div style="display: inline-block;">
                <div id="feedbackSmiley"></div>
            </div>
            <!-- <div>
                <h5 id="avg"></h5>
            </div> -->

            <div style="float: right; width: 300px;">
                <div id="posTweetStats" style="display: block;">
                    <div id="mostPosTweet"></div>
                    <div id="mostPosNum"></div>
                </div>

                <div class="hrDiv">
                    <hr class="line"></hr>
                </div>
                
                <div id="negTweetStats" style="display: block;">
                    <div id="mostNegTweet"></div>
                    <div id="mostNegNum"></div>
                </div>
            </div>
        </div>
        <div id="avgDiv">
            <div id="avg"></div>
        </div>
    </div>


    <div id="freeDiv">
        <h1>FREE TEXT</h1>
        <div id="feedbackSmiley">

        </div>
        <div>
            AVG:
            <h5 id="freeText_avg"></h5>
        </div>

        <div>
            positive number:
            <h5 id="freeText_pos_num"></h5>
        </div>

        <div>
            negative number:
            <h5 id="freeText_neg_num"></h5>
        </div>

        <div>
            words number:
            <h5 id="freeText_words_num"></h5>
        </div>
        
        
    </div>

    <div id="urlDiv">
        <h1>URL</h1>
        <h5 id="urlOutput">Loading</h5>
    </div>

</div>




